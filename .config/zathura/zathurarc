
# Bookmarks store at `~/.local/share/zathura/bookmarks`
# :blist 										# listbookmarks
# :bmark (bookmark_name)		# save a bookmark
# :bdelete (bookmark_name)	# delete a bookmark

set font "mono 15"

set sandbox none
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
set selection-clipboard clipboard
map u scroll up
map U scroll half-up
map e scroll down
map E scroll half-down
map i scroll right
map n scroll left
map r reload
map R rotate
map . zoom in
map , zoom out
map <Esc> recolor
map p print
map g goto top

map [fullscreen] u scroll up
map [fullscreen] U scroll half-up
map [fullscreen] e scroll down
map [fullscreen] E scroll half-down
map [fullscreen] i scroll right
map [fullscreen] n scroll left
map [fullscreen] r reload
map [fullscreen] R rotate
map [fullscreen] . zoom in
map [fullscreen] , zoom out
map [fullscreen] <Esc> recolor
map [fullscreen] p print
map [fullscreen] g goto top
